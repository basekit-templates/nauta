{% extends "layout.twig" %}

{% block content %}

{% include "includes/header.twig" %}
<div class="bk-pt-default">

    <div class="page-title">
        {{widget('content', 'blogposttitle', {
            content: '<h1>News</h1>'
        })|raw}}
    </div>

    <div class="container">
        <section class="template-content">

            {{zone('main')|raw}}

        </section>
    </div>

</div>


<!-- Footer 1 -->
<div class="portfolio-divider">
    <div class="portfolio-container">
        <div class="lefttext">
            {{widget('content', 'lefttextfooterapproach', {
                content: '<p>Learn more about the Nauta Captital approach</p>'
            })|raw}}
        </div>
        <div class="rightbutton">
            {{widget('button', 'rightbuttonfooter', {
                'text': 'Read More',
                'align': 'widget-align-center',
                'action': 'external',
                'url': 'http://docs.basekit.com',
                'target': '_blank'
            })|raw}}
        </div>
    </div>
</div>
<!-- End Footer 1 -->

<!-- Footer 2 -->
<div class="bigfooter">
    <div class="bigfooter-container">
        <div class="footerlogo">
            {{widget('logo', 'footerlogo', {
                'defaultlogo': asset("images/logo-footer.png")
            })|raw}}
        </div>
        <div class="londonaddress">
            {{widget('content', 'london-title', {
                content: '<p style="color: white">
                LONDON</p>'
            })|raw}}
            {{widget('content', 'london-info', {
                content: '<p>
                5th Floor, 9 Argyll Street, London, W1F 7TG 
                <br>UNITED KINGDOM
                <br>
                <br>
                Tel: +44 (0) 203 553 5757 <br>
                email: info@nautacapital.com</p>'
            })|raw}}
        </div>
        <div class="bostonaddress">
            {{widget('content', 'boston-title', {
                content: '<p style="color: white">
                BOSTON</p>'
            })|raw}}
            {{widget('content', 'boston-info', {
                content: '<p>
                200 High Street, 3rd floor
                Boston, MA 02110
                <br>USA
                <br>
                <br>
                Tel: +1 617 986 5060 <br>
                email: info@nautacapital.com</p>'
            })|raw}}
        </div>
        <div class="barcelonaaddress">
            {{widget('content', 'barcelona-title', {
                content: '<p style="color: white">
                BARCELONA</p>'
            })|raw}}
            {{widget('content', 'barcelona-info', {
                content: '<p>
                Avda. Diagonal 593, 8th floor
                08014 Barcelona
                <br>SPAIN
                <br>
                <br>
                Tel: +34 93 503 5900 <br>
                email: info@nautacapital.com</p>'
            })|raw}}
        </div>
    </div>
</div>
<!-- End Footer 2 -->

<!-- Footer 3 -->
<footer class="sub-footer">
    <div class="container">

        <div class="sub-footer-item">
            <ul class="sub-footer-list">
                <li class="sub-footer-list-item">
                    <h5>Copyright Â© {{ "now"|date("Y") }} Nauta Captial.</h5>
                </li>
                <li class="sub-footer-list-item">
                    <h5><a href="/terms-conditions" class="sub-footer-link">Terms &amp; Conditions</a></h5>
                </li>
                <li class="sub-footer-list-item">
                    <h5><a href="/cookie-policy" class="sub-footer-link">Cookie Policy</a></h5>
                </li>
            </ul>
        </div>

        <div class="sub-footer-item  sub-footer-item--social">
            {{widget('profile', 'socialicons', {
                'profileType':'socialicons'
            })|raw}}
        </div>

    </div>
</footer>

</footer>
<!-- End Footer 3 -->


{% endblock %}
