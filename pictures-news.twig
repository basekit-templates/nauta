{% extends "layout.twig" %}

{% block bodyscripts %}

<script src="//ajax.googleapis.com/ajax/libs/jquery/1.6/jquery.min.js"></script>
<script src="{{asset('/js/slider/js/jquery.easing.min.js')}}"></script>
<script src="{{asset('/js/slider/js/supersized.3.2.7.min.js')}}"></script>
<script src="{{asset('/js/slider/theme/supersized.shutter.min.js')}}"></script>

{% include 'includes/slider.twig' %}

{% set images = plugins.assets.albums['news'] %}
<script type="text/javascript">
    var slideImages = [];
</script>
{% for key, image in images %}

{% set image = plugins.assets.images[image] %}
{% if image.deleted != true %}
<script type="text/javascript">
    slideImages.push({
        image: "{{ image.url }}",
        title: "{{ image.title }}",
        thumb: "{{ image.url }}"
    });
</script>
{% endif %}
{% endfor %}

{% endblock %}
